{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>koki-develop/renovate-config"],
  "pinDigests": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/woodruffw/zizmor",
        "suzuki-shunsuke/ghalint"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^zizmor/action\\.yml$"],
      "matchStrings": [
        "image: docker://(?<depName>ghcr\\.io/koki-develop/github-actions-lint/.+?):(?<currentValue>.+?)"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": ["^dockerfiles/ghalint/Dockerfile$"],
      "matchStrings": ["GHALINT_VERSION=(?<currentValue>.*?)\\s"],
      "depNameTemplate": "suzuki-shunsuke/ghalint",
      "datasourceTemplate": "github-releases",
      "versioningTemplate": "semver"
    }
  ]
}
