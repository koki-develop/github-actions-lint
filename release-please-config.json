{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": true,
  "packages": {
    ".": {
      "release-type": "simple",
      "component": "action",
      "include-component-in-tag": false,
      "exclude-paths": ["dockerfiles"]
    },
    "dockerfiles/actionlint": {
      "release-type": "simple",
      "component": "actionlint",
      "include-component-in-tag": true
    },
    "dockerfiles/ghalint": {
      "release-type": "simple",
      "component": "ghalint",
      "include-component-in-tag": true
    },
    "dockerfiles/zizmor": {
      "release-type": "simple",
      "component": "zizmor",
      "include-component-in-tag": true
    }
  }
}
